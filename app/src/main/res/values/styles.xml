<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Internship2025.ProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/green</item>
    </style>
    <style name="Internship2025.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:foreground">@drawable/ripple_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="Internship2025.Button.VK" >
        <item name="android:backgroundTint">@color/VK</item>
        <item name="android:src">@drawable/ic_vk</item>
    </style>
    <style name="Internship2025.Button.OK" >
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/button_ok</item>
        <item name="android:src">@drawable/ic_ok</item>
    </style>
    <style name="Internship2025.EditText" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/white_50</item>
    </style>

    <style name="Internship2025.TextView.Title">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Internship2025.TextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Internship2025.TextView.Subtext">
        <item name="android:textColor">@color/white_50</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Internship2025.TextView.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Internship2025.TextView.Small.Click">
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="Internship2025.TextView.Small.Click.Filter">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Internship2025.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bottom_navigation_view_background</item>
        <item name="itemActiveIndicatorStyle">@style/Internship2025.ActiveIndicator</item>
        <item name="itemTextAppearanceActive">@style/Internship2025.itemTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/Internship2025.itemTextAppearance</item>
        <item name="itemIconTint">@color/bottom_navigation_view_text</item>
        <item name="itemTextColor">@color/bottom_navigation_view_text</item>
    </style>
    <style name="Internship2025.itemTextAppearance" parent="@style/TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Internship2025.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_gray</item>
    </style>


</resources>